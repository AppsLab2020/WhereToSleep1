<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhereToSleep.Map">
    <ContentPage.Content>
        
        <StackLayout>
            
            <Grid>
                <Image Source="map_header.png" WidthRequest="360" HorizontalOptions="Start" VerticalOptions="Start" ></Image>
            </Grid>

            <Grid>
                <ImageButton Source="Vector.png"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="20"
                    HeightRequest="20"
                    BackgroundColor="#85D5EE"
                    Clicked="backbtn_Clicked"
                    Margin="10,10,0,0"
                />
            </Grid>



            <Label Text="this is the map page!!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"/>

          

        </StackLayout>
    </ContentPage.Content>
</ContentPage>